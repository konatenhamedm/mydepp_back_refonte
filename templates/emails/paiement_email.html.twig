      text-align: center;
      padding: 18px;
      margin: 20px auto;
      font-size: 20px;
      font-weight: bold;
      color: #53B0B7;
      display: inline-block;
      min-width: 220px;
    }

    .details {
      margin-top: 15px;
      font-size: 15px;
      color: #333;
      line-height: 1.8;
    }

    .footer {
      text-align: center;
      font-size: 12px;
      color: #888;
      padding: 15px;
      border-top: 1px solid #e6e9ec;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(15px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
